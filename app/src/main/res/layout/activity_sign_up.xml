<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUp">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="160dp"
        android:layout_height="190dp"
        android:src="@drawable/instagram1"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"/>
    <EditText
        android:id="@+id/full_name_register"
        android:hint="Full Name"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_below="@+id/logo"
        android:background="@drawable/inputs_background"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="6dp"
        android:inputType="text"
        />
    <EditText
        android:id="@+id/username_register"
        android:hint="Username..."
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="@drawable/inputs_background"
        android:layout_below="@+id/full_name_register"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="6dp"
        android:inputType="text"

        />
    <EditText
        android:id="@+id/email_id_register"
        android:hint="Email..."
        android:background="@drawable/inputs_background"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_below="@+id/username_register"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:drawableLeft="@drawable/ic_perm_identity_black_24dp"
        android:layout_marginTop="6dp"
        android:inputType="textEmailAddress"

        />
    <EditText
        android:id="@+id/password_register"
        android:hint="Password..."
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_below="@+id/email_id_register"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:drawableLeft="@drawable/ic_lock_outline_black_24dp"
        android:layout_marginTop="6dp"
        android:inputType="textPassword"
        android:background="@drawable/inputs_background"

        />
    <Button
        android:id="@+id/signup_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/password_register"
        android:text="Register"
        android:textAllCaps="false"
        android:textSize="16dp"
        android:background="@drawable/button_black_background"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        />
    <Button
        android:id="@+id/signin_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/signup_btn"
        android:text="Login"
        android:textAllCaps="false"
        android:textSize="16dp"
        android:background="@drawable/button_black_background"
        android:layout_marginRight="20dp"
        android:layout_marginTop="16dp"
        />


</RelativeLayout>